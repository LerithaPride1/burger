
<div class="row">
  <center>
    
    <div class="col-md-6">
      <h4>Burgers Ordered!</h4>
      <div id="burgers_ordered">

       
        {{#each burgers}}
          {{#unless this.devoured}}
          {{this.burge_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-danger devour-button" type="submit">Devour It?</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>


    <div class="col-md-6">
      <h4>Devoured!</h4>
      <div id="devoured">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>